<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @book.title %>
</p>

<p>
  <b>Price:</b>
  <%= @book.price %>
</p>

<h2>Properties</h2>

<table>
  <thead>
    <tr>
      <th>Key</th>
      <th>Value</th>
    </tr>
  </thead>
  <tbody>
  <% @book.properties.each do |property| %>
    <tr>
      <td><%= property.key %></td>
      <td><%= property.value %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<hr/>

<%= link_to 'Edit', edit_book_path(@book) %> |
